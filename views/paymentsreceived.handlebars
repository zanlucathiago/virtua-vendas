<div id="paymentsdeletemodal" class="modal delete-modal">
  <div class="modal-content">
    <h4>Atenção</h4>
    <p>Deseja excluir os produtos selecionados?</p>
    <form
      action="/paymentsreceived/delete"
      class="delete-form"
      id="deletepaymentsform"
      method="POST"
    >
      <div class="input-field col s6">
        <input id="modaldeleteids" name="modaldeleteids" type="hidden" />
        <label for="modaldeleteids"></label>
      </div>
    </form>
  </div>
  <div class="modal-footer">
    <a class="btn-flat modal-close waves-effect waves-light" href="#!">
      Cancelar
    </a>
    <button
      class="btn danger-background waves-effect waves-light"
      form="deletepaymentsform"
      type="submit"
      name="action"
    >
      <i class="material-icons right">delete</i>
      Excluir
    </button>
  </div>
</div>
<div style="margin: -8px 0 8px 0">
  <a
    class="modal-trigger waves-effect waves-light btn danger-background"
    id="deletepaymentsbutton"
    href="#paymentsdeletemodal"
    ><i class="material-icons left">delete</i>Excluir selecionados</a
  >
</div>
<table class="striped highlight">
  <thead>
    <tr>
      <th>
        <div class="td-checkbox" id="td-checkbox-main">
          <label for=""
            ><input type="checkbox" class="filled-in" /><span></span
          ></label>
        </div>
      </th>
      <th>Data</th>
      <th>Número</th>
      <th>Referência</th>
      <th>Cliente</th>
      <th>Faturas</th>
      <th>Modo</th>
      <th>Montante</th>
      <th>Não utilizado</th>
    </tr>
  </thead>
  <tbody class="generic-table-body" id="paymentstablebody">
    {{#each paymentsreceived}}
    <tr>
      <td class="hidden-field">{{ id }}</td>
      <td>
        <div class="td-checkbox">
          <label for=""
            ><input type="checkbox" class="filled-in" /><span></span
          ></label>
        </div>
      </td>
      <td>{{ date }}</td>
      <td>{{ number }}</td>
      <td>{{ reference }}</td>
      <td>{{ customer.name }}</td>
      <td>{{ invoicesLabel }}</td>
      <td>{{ modeLabel }}</td>
      <td>{{ valueLabel }}</td>
      <td>{{ dueValue }}</td>
      <td>
        <a
          class="modal-trigger waves-effect waves-light btn information-background default-icon-button row-icon-button"
          href="#addpayment{{ id }}"
          ><i class="material-icons">edit</i></a
        >
      </td>
    </tr>
    {{else}}
    <tr>
      <td colspan="9">Não há pagamentos lançados.</td>
    </tr>
    {{/each}}
  </tbody>
  {{> tfoot this}}
</table>
