<div id="invoicesdeletemodal" class="modal delete-modal">
  <div class="modal-content">
    <h4>Atenção</h4>
    <p>Deseja excluir as faturas selecionados?</p>
    <form action="/invoices/delete" class="delete-form" id="deleteinvoicesform" method="POST">
      <div class="input-field col s6">
        <input id="modaldeleteids" name="modaldeleteids" type="hidden" />
        <label for="modaldeleteids"></label>
      </div>
    </form>
  </div>
  <div class="modal-footer">
    <a class="btn-flat modal-close waves-effect waves-light" href="#!">
      Cancelar
    </a>
    <button
      class="btn danger-background waves-effect waves-light"
      form="deleteinvoicesform"
      type="submit"
      name="action"
    >
      <i class="material-icons right">delete</i>
      Excluir
    </button>
  </div>
</div>
<div style="margin: -8px 0 8px 0">
  <a
    class="modal-trigger waves-effect waves-light btn danger-background"
    id="deleteinvoicesbutton"
    href="#invoicesdeletemodal"
    ><i class="material-icons left">delete</i>Excluir selecionados</a
  >
</div>
<table class="striped highlight">
  <thead>
    <tr>
      <th>
        <div class="td-checkbox" id="td-checkbox-main">
          <label for=""
            ><input type="checkbox" class="filled-in" /><span></span
          ></label>
        </div>
      </th>
      <th>Data</th>
      <th>Fatura</th>
      <th>Pedido</th>
      <th>Cliente</th>
      <th>Status</th>
      <th>Vencimento</th>
      <th>Montante</th>
      <th>Saldo Devido</th>
    </tr>
  </thead>
  <tbody class="generic-table-body" id="invoicestablebody">
    {{#each invoices}}
    <tr>
      <td class="hidden-field">{{ id }}</td>
      <td>
        <div class="td-checkbox">
          <label for=""
            ><input type="checkbox" class="filled-in" /><span></span
          ></label>
        </div>
      </td>
      <td>{{ date }}</td>
      <td>{{ number }}</td>
      <td>{{ order }}</td>
      <td>{{ customer.name }}</td>
      <td>{{ statusLabel }}</td>
      <td>{{ dueDate }}</td>
      <td>{{ value }}</td>
      <td>{{ dueValue }}</td>
      <td>
        <a
          class="modal-trigger waves-effect waves-light btn information-background default-icon-button row-icon-button"
          href="#addinvoice{{ id }}"
          ><i class="material-icons">edit</i></a
        >
      </td>
    </tr>
    {{else}}
    <tr>
      <td colspan="9">Não há faturas lançadas.</td>
    </tr>
    {{/each}}
  </tbody>
  {{> tfoot this}}
</table>
