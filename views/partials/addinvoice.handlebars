<div id="addinvoice" class="modal">
  <div class="modal-content">
    <h4>Adicionar Fatura</h4>
    <form action="/invoices/add" id="addinvoiceform" method="POST">
      <a
        class="dropdown-trigger"
        data-target="dropdown-customer-invoice-add"
        href="#"
        id="dropdown-customer-invoice-add-trigger"
        style="position: relative"
      >
        <div class="input-field col s6">
          <input
            id="invoicecustomerid"
            name="customerId"
            type="text"
            class="validate"
          />
          <label for="invoicecustomerid">Cliente</label>
        </div></a
      >
      <ul id="dropdown-customer-invoice-add" class="dropdown-content"></ul>
      <div class="input-field col s6">
        <input id="invoicenumber" name="number" type="text" class="validate" />
        <label for="invoicenumber">Fatura</label>
      </div>
      <div class="input-field col s6">
        <input id="invoiceorder" name="order" type="text" class="validate" />
        <label for="invoiceorder">Pedido</label>
      </div>
      <div class="input-field col s6">
        <input id="invoicedate" name="date" type="text" class="datepicker" />
        <label for="invoicedate">Data</label>
      </div>
      <div class="input-field col s12">
        <select class="paymentterms-select" name="paymentTerms"></select>
        <label>Prazo</label>
      </div>
      <div class="input-field col s6">
        <input
          id="invoiceduedate"
          name="dueDate"
          type="text"
          class="datepicker"
        />
        <label for="invoiceduedate">Vencimento</label>
      </div>
    </form>
    <h5>Produtos</h5>
    <table class="striped highlight">
      <colgroup>
        <col span="1" style="width: 40%" />
        <col span="1" style="width: 20%" />
        <col span="1" style="width: 20%" />
        <col span="1" style="width: 20%" />
      </colgroup>
      <thead>
        <tr>
          <th>Item</th>
          <th>Quantidade</th>
          <th>Pre√ßo</th>
          <th>Total</th>
        </tr>
      </thead>

      <tbody id="invoiceitemstablebody"></tbody>
      <tfoot>
        <th>Total</th>
        <th>0</th>
        <th>R$ 0,00</th>
        <th>R$ 0,00</th>
      </tfoot>
    </table>
    <a class="waves-effect waves-light btn" id="additembutton" current-id="0"
      ><i class="material-icons left">add_shopping_cart</i>Produto</a
    >
  </div>
  <div class="modal-footer">
    <a class="btn-flat modal-close waves-effect waves-light" href="#!">
      Cancelar
    </a>
    <button
      class="btn waves-effect waves-light"
      form="addinvoiceform"
      type="submit"
      name="action"
    >
      Salvar
      <i class="material-icons right">send</i>
    </button>
  </div>
</div>
